<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="jacoblazo.finalfinal.MainActivity">

    <Button android:id="@+id/settings_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="settings"
        android:onclick="openSettings" />
    <TextView
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello and welcome to Snap Food! This is a food log application, press any button to get started."/>

    <Button android:id="@+id/openCamera_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take a photo"
        android:onClick="openCamera" />

    <Button android:id="@+id/openLogs_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open logs"
        android:onClick="openLogs" />

    <Button android:id="@+id/about_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:onClick="openAbout"/>
</LinearLayout>
